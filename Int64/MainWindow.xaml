<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Int64Converter.MainWindow"
        xmlns:local="clr-namespace:Int64Converter"    
        Title="Int64" Height="120px" Width="475px" Padding="2">
    <Window.Resources>
        <local:CInt64ToH32Converter x:Key="Int64ToH32Converter"/>
    </Window.Resources>
    <Grid Height="Auto" Width="Auto" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" >
            <Label Content="Int64:" Height="25.24" VerticalAlignment="Top" />
            <TextBox x:Name="Int64Text" MinWidth="160px" DataObject.Pasting="CheckPasting" PreviewKeyDown="CheckPreviewKeyDown" InputMethod.IsInputMethodEnabled="False"
                   PreviewTextInput="CheckPreviewTextInput" Text="0"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Width="Auto">
            <Label Content="H32:" />
            <TextBox x:Name="H32" MinWidth="80px">
                <TextBox.Text>
                    <Binding Path="Text" ElementName="Int64Text" UpdateSourceTrigger="PropertyChanged" Converter="{StaticResource Int64ToH32Converter}" ValidatesOnDataErrors="True" ValidatesOnExceptions="True">
                        <Binding.ValidationRules>

                            <local:NumCheckRule Min="0" Max="1000000" ValidatesOnTargetUpdated="True" />
                                
                        </Binding.ValidationRules>
                    </Binding>
                   
                </TextBox.Text>
            </TextBox> 
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Width="Auto">
            <Label Content="L32:" />
            <TextBox x:Name="L32" MinWidth="80px"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Width="Auto">
            <Label Content="HH8:" />
            <TextBox x:Name="HH8" MinWidth="80px"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Width="Auto">
            <Label Content="HL8:" />
            <TextBox x:Name="HL8" MinWidth="80px"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Width="Auto">
            <Label Content="LH8:" />
            <TextBox x:Name="LH8" MinWidth="80px"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="3" Width="Auto">
            <Label Content="LL8:" />
            <TextBox x:Name="LL8" MinWidth="80px"/>
        </StackPanel>

    </Grid>
</Window>
